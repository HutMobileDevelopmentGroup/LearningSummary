//常用项归为类，提高可读性
    var Label: PowerLabel = {
        let label = PowerLabel(frame: CGRect(x: 160.fitScreen,y: 25.fitScreen,width: 100, height: 40))
        label.text = ""
        label.alpha = 0.8
        label.font = UIFont (name: "Arial",size: 24)
        return label
    }()
    var Label2: PowerLabel = {
